{
    "suggest.timeout": 1000,
    "diagnostic.format": "[%severity] %message [%source%code] ",
    "diagnostic.enable": true,
    "diagnostic.enableHighlightLineNumber": true,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.virtualTextCurrentLineOnly": true,
    "diagnostic.virtualText": false,
    "diagnostic.errorSign": "✗ ",
    "diagnostic.warningSign": "▲ ",
    "diagnostic.infoSign": " ",
    "diagnostic.hintSign": " ",
    "coc.source.around.enable": true,
    "list.source.tags.command": "ctags -R .",
    "pyright.organizeimports.provider": "isort",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.blackArgs": [
        "-S",
        "--fast",
        "--line-length=120"
    ],
    "python.linting.pylintArgs": [
        //    "--load-plugins=pylint_django",
        //   "--load-plugins=pylint_django.checkers.migrations",
        "--errors-only"
    ],
    "python.linting.flake8Enabled": false,
    "diagnostic.enableSign": true
}
